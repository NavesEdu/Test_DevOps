version: '3.8'
services:
  jenkins:
    image: ./controller
    privileged: true
    user: root
    ports:
      - "8080:8080"
    container_name: jenkins-controller
    environment:
      - CASC_JENKINS_CONFIG=/var/jenkins_home/casc.yaml
      - JAVA_OPTS=-Xmx2048m
    volumes:
      - ./jenkins_home:/var/jenkins_home
      - /var/run/docker.sock:/var/run/docker.sock
      - ./casc.yaml:/var/jenkins_home/casc.yaml